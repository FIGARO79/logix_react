[Unit]
Description=Logix Backend (FastAPI with Gunicorn)
After=network.target mariadb.service

[Service]
Type=notify
User=debian
Group=debian
WorkingDirectory=/home/debian/logix_react
Environment="PATH=/home/debian/logix_react/venv/bin"
ExecStart=/home/debian/logix_react/venv/bin/gunicorn -c /home/debian/logix_react/gunicorn_config.py main:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
