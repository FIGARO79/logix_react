[Unit]
Description=Gunicorn Logix
After=network.target

[Service]
# IMPORTANTE: Cambia 'tu_usuario' por el usuario linux real (ej. 'ubuntu', 'root', 'fabio')
User=tu_usuario
Group=www-data
WorkingDirectory=/var/www/logix

# Cargar variables de entorno desde archivo .env
EnvironmentFile=/var/www/logix/.env

# Variables extra si son necesarias (PATH suele requerirse expl√≠citamente)
Environment="PATH=/var/www/logix/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/var/www/logix/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target
