# Configuración de producción para PythonAnywhere
# IMPORTANTE: Reemplaza estos valores con tus propios valores de producción

# Dominio de PythonAnywhere (reemplaza YOUR_USERNAME)
PYTHONANYWHERE_DOMAIN=YOUR_USERNAME.pythonanywhere.com

# Entorno
ENVIRONMENT=production

# Clave secreta para sesiones (GENERA UNA NUEVA Y SEGURA)
# Puedes generar una con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CAMBIA_ESTA_CLAVE_POR_UNA_SEGURA_Y_ALEATORIA

# Password para actualización de archivos (CAMBIA ESTO)
UPDATE_PASSWORD=TU_PASSWORD_ADMIN_SEGURA_AQUI

# Configuración de base de datos (SQLite)
# La ruta será relativa al proyecto en PythonAnywhere
DB_PATH=inbound_log.db

# Configuración de archivos CSV
CSV_FOLDER=databases

# Modo debug (debe ser False en producción)
DEBUG=False
